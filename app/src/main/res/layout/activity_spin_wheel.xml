<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpinWheelActivity">

    <include
        android:id="@+id/spinWinToolbar"
        layout="@layout/dreampot_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/wheelCard"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/spin_wheel_bg"
        app:cardCornerRadius="200dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinWinToolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wheelConstrnt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/spin_wheel_bg"
            android:rotation="18"
            app:layout_constraintEnd_toStartOf="@+id/view10"
            app:layout_constraintStart_toStartOf="@+id/view10">

            <View
                android:id="@+id/view10"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:rotation="144"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <View
                android:id="@+id/view11"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:rotation="180"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <View
                android:id="@+id/view12"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:rotation="36"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <View
                android:id="@+id/view13"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:rotation="72"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <View
                android:id="@+id/view14"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:rotation="108"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="95dp"
                android:layout_height="24dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="1dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:rotation="70"
                android:text="24"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toStartOf="@+id/view10"
                app:layout_constraintHorizontal_bias="0.486"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="95dp"
                android:layout_height="24dp"
                android:layout_marginEnd="75dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:rotation="108"
                android:text="500"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/t1" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="95dp"
                android:layout_height="24dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="32dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:rotation="144"
                android:text="Better Luck Next Time"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/view10"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/t4"
                android:layout_width="95dp"
                android:layout_height="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:rotation="180"
                android:text="85"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/t3" />

            <TextView
                android:id="@+id/t5"
                android:layout_width="95dp"
                android:layout_height="24dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="88dp"
                android:drawablePadding="8dp"
                android:gravity="center"

                android:rotation="216"
                android:text="1000"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/t6"
                android:layout_width="95dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="93dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:rotation="252"
                android:text="7"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/view10"
                app:layout_constraintTop_toBottomOf="@+id/t5" />

            <TextView
                android:id="@+id/t8"
                android:layout_width="95dp"
                android:layout_height="24dp"
                android:layout_marginEnd="24dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:rotation="324"
                android:text="43"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="@+id/t5"
                app:layout_constraintEnd_toStartOf="@+id/view10"
                app:layout_constraintTop_toTopOf="@+id/t5"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/t9"
                android:layout_width="95dp"
                android:layout_height="24dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="59dp"
                android:layout_marginBottom="28dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:rotation="360"
                android:text="9"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/t8"
                app:layout_constraintEnd_toStartOf="@+id/view10"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/t4"
                app:layout_constraintVertical_bias="0.941" />

            <TextView
                android:id="@+id/t10"
                android:layout_width="95dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="92dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:rotation="36"
                android:text="Better Luck Next Time"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/t7"

                android:layout_width="95dp"
                android:layout_height="24dp"
                android:layout_marginStart="72dp"
                android:layout_marginBottom="56dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:rotation="288"
                android:text="Better Luck Next Time"
                android:textAlignment="textStart"

                android:textColor="@color/white"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-16dp"
                app:layout_constraintBottom_toTopOf="@+id/cardView4"
                app:layout_constraintEnd_toEndOf="@+id/cardView4"
                app:layout_constraintStart_toStartOf="@+id/cardView4"
                app:srcCompat="@drawable/arrow_up" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="4dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/spinBtn"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/spin_btn_bg"
                    android:clickable="true">

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Spin"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/wheelCard"
        app:layout_constraintEnd_toEndOf="@+id/wheelCard"
        app:layout_constraintStart_toStartOf="@+id/wheelCard"
        app:layout_constraintTop_toTopOf="@+id/wheelCard"
        app:srcCompat="@drawable/circle_border" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/spinWinAnim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinWinToolbar"
        app:layout_constraintVertical_bias="0.5" />

    <LinearLayout
        android:id="@+id/youWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:padding="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/youWonTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_bold"
            android:text="You Won "
            android:textAllCaps="true"
            android:textColor="@color/orangeDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/youWonCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/coins_18dp"
            android:drawablePadding="4dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="500"
            android:textColor="@color/orangeDark"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/avalSpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/blue"
        android:padding="2dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Available Spin: 4"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinWinToolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>